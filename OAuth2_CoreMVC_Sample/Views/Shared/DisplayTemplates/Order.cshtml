@model WooCommerceNET.WooCommerce.v2.Order
<style>
    table {
        width: 100%;
    }
</style>

@if (@Model != null)
{
    <h2>Customer</h2>
    <table>
    <tr>
        <th style="width: 30%;">Customer Country (shipping)</th>
        <th>Customer Email</th>
    </tr>
    <tr>
        <td>@Model.shipping.country</td>
        <td>@Model.billing.email</td>
    </tr>
</table>
    <br />
    <h2>Order</h2>
    <table>
    <tr>
        <th>Status</th>
        <th>Currency</th>
        <th>Payment Method</th>
    </tr>
    <tr>
        <td>@Model.status</td>
        <td>@Model.currency</td>
        <td>@Model.payment_method_title (@Model.payment_method)</td>
    </tr>
</table>
    <br />
    <table>
    <col>
    <col>
    <col>
    <tr>
        <th colspan="2">Discount</th>
        <th colspan="2">Shipping</th>
        <th colspan="3">Summary</th>
    </tr>
    <tr>

        <th scope="col">Tax</th>
        <th scope="col">Total</th>

        <th scope="col">Tax</th>
        <th scope="col">Total</th>

        <th scope="col">Cart Tax</th>
        <th scope="col">Tax</th>
        <th scope="col">Total</th>

    </tr>
    <tr>
        <td>@Model.cart_tax</td>

        <td>@Model.discount_tax</td>
        <td>@Model.discount_total</td>

        <td>@Model.shipping_tax</td>
        <td>@Model.shipping_total</td>

        <td>@Model.total_tax</td>
        <td>@Model.total</td>
    </tr>
</table>
    <br />
    <h2>Items</h2>
    <table>
    @* <tr>
        <td>Total Tax</td>
        <td>Total Cost</td>
        <td>Price</td>
        </tr> *@

    <tr>
        <th>SKU</th>
        @* <th colspan="2" style="vertical-align : middle;text-align:center; width: 50%;">Taxes</th> *@
        <th>Price</th>
        <th>Tax</th>
        <th>Quantity</th>
        <th>Total Cost</th>
    </tr>
    @foreach (var product in @Model.line_items)
        {
            <tr>
                <td>@product.sku</td>
                <td>@product.price</td>
                <td>@product.total_tax</td>
                <td>@product.quantity</td>
                <td>@product.total</td>

                @* @foreach(TaxModel tax in product.Taxes as IList<TaxModel>) {
                    <td>@tax.SubTotal</td>
                    <td>@tax.Total</td>
                    } *@

            </tr>
            @* @foreach(TaxModel tax in product.Taxes as IList<TaxModel>) {
                <tr>
                <td>@tax.SubTotal</td>
                <td>@tax.Total</td>
                </tr>
                } *@
        }
    </table>
}